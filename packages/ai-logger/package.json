{
  "name": "@standardbeagle/ai-logger",
  "version": "1.0.0",
  "description": "Full-stack logging system for Next.js applications with request-scoped logging, client-side logging, and automatic error persistence. Features memory-efficient logging with Winston integration.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepublishOnly": "npm run build"
  },
  "publishConfig": {
    "access": "public",
    "auth-type": "legacy"
  },
  "keywords": [
    "logging",
    "winston",
    "next.js",
    "react",
    "typescript",
    "error-logging",
    "request-logging",
    "client-logging"
  ],
  "author": "Standard Beagle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/standardbeagle/ai-logger.git"
  },
  "bugs": {
    "url": "https://github.com/standardbeagle/ai-logger/issues"
  },
  "homepage": "https://github.com/standardbeagle/ai-logger#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "happy-dom": "^13.10.1",
    "jsdom": "^24.0.0",
    "next": "^15.1.7",
    "typescript": "5.3.3",
    "vitest": "^1.6.1"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
